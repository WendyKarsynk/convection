#!/bin/bash

set -ex

github_user=$(git config --global --get github.user)
mog_label="Merge On Green"
team="csgn-devs"

message=$(cat <<END
Library Updates

This commit updates our libraries like this:
$ bundle update
$ yarn upgrade --latest

It was automatically run with this script:
$ ./bin/update
END
)

bundle update
yarn upgrade --latest
bundle exec rake
git add .
git commmit --message "$message"
hub pull-request --message "$message" --reviewer $team --assign $github_user --labels $mog_label
