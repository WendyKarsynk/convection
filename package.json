{
  "name": "convection",
  "version": "1.0.0",
  "scripts": {
    "prettier": "prettier --write '**/*.rb'",
    "prettier-check": "prettier --check '**/*.rb'"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "0.17.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{app,test}/**/*.rb": "bundle exec rubocop -a",
    "*.{rb,js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
