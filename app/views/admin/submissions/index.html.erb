<div class='page-title'>
  <h2>Submissions</h2>
</div>

<div class='row triple-padding-top'>
  <div class='row col-sm-12'>
    <div class='col-sm-12'>
      <%= link_to 'New Submission', new_admin_submission_path, class: 'btn btn-primary btn-full-width' %>
    </div>
  </div>
</div>


<div class='container'>
  <div class='row triple-padding-top'>
    <div class='col-md-12'>
      <div class='list-group'>
        <% @submissions.each do |submission| %>
          <div class='list-group-item list-item--submission' data-id=<%= submission.id %>>
            <div class='list-group-item-info list-group-item-info--id'>
              <%= submission.id %>
            </div>
            <div class='list-group-item-info asset-thumb'>
              <% if submission.thumbnail.present? %>
                <%= image_tag submission.thumbnail %>
              <% end %>
            </div>
            <div class='list-group-item-info'>
              <%= submission.created_at.strftime('%m/%d/%Y') %>
            </div>
            <div class='list-group-item-info'>
              <%= submission.artist_name %>
            </div>
            <div class='list-group-item-info'>
              <%= submission.category %>
            </div>
            <div class='list-group-item-info'>
              <%= submission.state %>
            </div>
            <div class='actions'>
              <%= link_to 'View', admin_submission_path(submission), class: 'btn btn-tiny' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render partial: 'shared/watt/paginator', locals: { total_items_count: @submissions.total_count, items_count: @submissions.length, per_page: @size, current_page: @page, base_url: admin_submissions_url } %>
</div>
