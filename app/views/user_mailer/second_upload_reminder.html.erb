<%= stylesheet_link_tag 'emails', media: 'all' %>

<table class='second-upload-reminder-email'>
  <tr>
    <td>
      <table class='padded-email'>
        <tr>
          <td>
            <table class='email-content' align='center'>
              <tr>
                <td>
                  <%= render 'shared/email/email_header' %>
                </td>
              </tr>
              <tr>
                <td class='email-title'>
                  We're unable to complete your submission.
                </td>
              </tr>
              <tr>
                <td class='email-main-photo'>
                  <%= image_tag(image_url('artsy-take-photo.jpg'), id: 'artsy-take-photo') %>
                </td>
              </tr>
              <tr>
                <td>
                  <table>
                    <tr>
                      <td class='email-sub-title email-sub-title-bottom'>
                        Please upload images of the work (front, back, signature) to continue with your submission.
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td>
                  <table class='full-width-button'>
                    <tr>
                        <td class='upload-photo-button'>
                          <%= link_to('Upload Photos', upload_photo_url(@submission.id, @utm_params)) %>
                        </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class='submission-id'>
      <%= "Submission ##{@submission.id}" %>
    </td>
  </tr>
</table>
