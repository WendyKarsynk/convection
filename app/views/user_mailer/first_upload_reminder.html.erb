<%= stylesheet_link_tag 'emails', media: 'all' %>

<table class='first-upload-reminder-email'>
  <tr>
    <td>
      <table class='padded-email'>
        <tr>
          <td>
            <table class='email-content first-reminder-email' align='left'>
              <tr>
                <td>
                  <%= render partial: 'shared/email_header' %>
                </td>
              </tr>
              <tr>
                <td class='email-title'>
                Complete your consignment submission
                </td>
              </tr>
              <tr>
                <td class='email-sub-title'>
                  Upload photos of your work to complete your consignment submission.
                </td>
              </tr>
              <tr>
                <td>
                  <table class='checklist' align='center'>
                    <tr class='checklist-row'>
                      <td class='check purple-check'>
                        <%= image_tag(image_url('purple-check.png'), id: 'purple-check') %>
                      </td>
                      <td class='checklist-item checklist-item-completed'>
                        Verified Artist/Designer
                      </td>
                    </tr>
                    <tr class='checklist-row'>
                      <td class='check purple-check'>
                        <%= image_tag(image_url('purple-check.png'), id: 'purple-check') %>
                      </td>
                      <td class='checklist-item checklist-item-completed'>
                        Work Description
                      </td>
                    </tr>
                    <tr class='checklist-row'>
                      <td class='check empty-check'>
                        <%= image_tag(image_url('empty-check.png'), id: 'empty-check') %>
                      </td>
                      <td class='checklist-item checklist-item-incomplete'>
                        Upload Photos
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td>
                  <table class='full-width-button'>
                    <tr>
                      <td class='upload-photo-button'>
                        <%= link_to('Upload Photos', upload_photo_url(@submission.id, @utm_params)) %>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class='submission-id'>
      <%= "Submission ##{@submission.id}" %>
    </td>
  </tr>
</table>
