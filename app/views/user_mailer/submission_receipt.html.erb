<%= stylesheet_link_tag 'emails', media: 'all' %>

<table class='receipt-email'>
  <tr>
    <td>
      <table class='padded-email'>
        <tr>
          <td>
            <table class='email-content' align='center'>
              <tr>
                <td>
                  <%= render 'shared/email/email_header' %>
                </td>
              </tr>
              <tr>
                <td class='email-title'>
                  Thank you! We have received your submission.
                </td>
              </tr>
              <tr>
                <td class='email-sub-title'>
                  Our team of specialists are currently reviewing your work. You will receive an email update once the status of your submission changes.
                </td>
              </tr>
              <tr>
                <td>
                  <%= render 'shared/email/submission_block', submission: @submission %>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>