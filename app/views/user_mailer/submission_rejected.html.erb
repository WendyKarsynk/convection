<%= stylesheet_link_tag 'emails', media: 'all' %>

<table class='padded-email'>
  <tr>
    <td>
      <table class='email-content' align='left'>
        <tr>
          <td>
            <%= render 'shared/email_header' %>
          </td>
        </tr>
        <tr>
          <td class='email-sub-title'>
            <p>Dear <%= @user.name %>,</p>
            <p>After careful review we've determined that we will not be able to offer your consignment to our partner network.</p>
            <p>Sincerely,<br />Collector Relations Team</p>
          </td>
        </tr>
        <tr>
          <td>
            <%= render 'shared/submission_block', submission: @submission %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
