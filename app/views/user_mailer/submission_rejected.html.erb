<%= stylesheet_link_tag 'emails', media: 'all' %>

<table class='padded-email'>
  <tr>
    <td>
      <table class='email-content' align='left'>
        <tr>
          <td>
            <%= render 'shared/email/email_header' %>
          </td>
        </tr>
        <tr>
          <td class='email-sub-title'>
            <p>Dear <%= @user.name %>,</p>
            <p>Thank you for your interest in Artsy Consignments. We have carefully reviewed your submission and do not feel that it is right for our partners at this time. We will be in touch if anything changes in the future.</p>
            <p>Sincerely,<br />The Consignments Team</p>
          </td>
        </tr>
        <tr>
          <td>
            <%= render 'shared/email/submission_block', submission: @submission %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
